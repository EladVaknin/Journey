<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:padding="10dp">


    <ImageView
        android:id="@+id/image_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:background="@drawable/journey_logo" />

    <TextView
        android:id="@+id/NumWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_item"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/image_item"
        android:text="Week :" />

    <TextView
        android:id="@+id/PracticeDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/NumWeek"
        android:layout_alignLeft="@id/NumWeek"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/image_item"
        android:text="Distance :" />

    <TextView
        android:id="@+id/PracticePace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PracticeDistance"
        android:layout_alignLeft="@id/NumWeek"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/image_item"
        android:text="Pace :" />


    <ImageView
        android:id="@+id/Confirm_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/confirm_button" />


    <View
        android:id="@+id/seperator"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="3dp"
        android:layout_alignParentBottom="true"
        android:background="#BABABA" />


</RelativeLayout>