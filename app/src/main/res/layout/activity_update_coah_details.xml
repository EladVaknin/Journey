<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/Logoview"
        android:background="@drawable/journey_logo"/>


    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Logoview"
        android:layout_centerHorizontal="true"
        android:text="Update details"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="20sp"
        android:textStyle="normal" />


    <EditText
        android:id="@+id/editTextUserNameUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="80dp"
        android:ems="10"
        android:hint="Update Coach User Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


    <EditText
        android:id="@+id/editTextExperienceUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextUserNameUpdate"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="-72dp"
        android:ems="10"
        android:hint="Update Experience (in years)"
        android:textColorHint="@color/white"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editTextEducationUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextExperienceUpdate"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="-70dp"
        android:ems="10"
        android:hint="Update your description"
        android:textColorHint="@color/white"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editTextGenderUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEducationUpdate"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="-70dp"
        android:ems="10"
        android:hint="Update Gender"
        android:textColorHint="@color/white"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editTextAgeUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextGenderUpdate"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="-70dp"
        android:ems="10"
        android:hint="Update Age"
        android:textColorHint="@color/white"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="@color/white" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UpdateButton"
        android:layout_marginTop="510dp"
        android:layout_centerHorizontal="true"
        android:text="Update"
        android:backgroundTint="@android:color/holo_orange_dark" />



    <ProgressBar
        android:id="@+id/progressBarUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/UpdateButton"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />










</RelativeLayout>